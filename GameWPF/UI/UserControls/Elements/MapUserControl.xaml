<UserControl x:Class="GameWPF.UserControls.Elements.MapUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameWPF.UserControls.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="140*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Label Name="PlayersValue" Grid.Column="0"/>
        <Label Name="MapSize" Grid.Column="1"/>
        <Label Name="ScenarioName" Grid.Column="2"/>
        <Label Name="VictoryConditions" Grid.Column="3"/>
        <Label Name="DefeatConditions" Grid.Column="4"/>
    </Grid>
</UserControl>
